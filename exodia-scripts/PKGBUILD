pkgname=exodia-scripts
pkgver=2.0
pkgrel=5
pkgdesc="Scripts For Exodia OS"
arch=('any')
url="https://github.com/Exodia-OS/exodia-scripts"
license=('GPL3')
groups=("exodia-skeleton")

prepare() {

	cp -af ../bin/. ${srcdir}

}

package() {

	local scripts_dir=${pkgdir}/usr/local/bin
	mkdir -p ${scripts_dir}
	cp -r ${srcdir}/* ${scripts_dir}

}
